extends ../layout

block content
	.container
		.row
			.col-md-7
				video(src="#{movie.flash}", type="video/mp4", controls="controls")
			.col-md-5
				dl.dl-horizontal
					dt 电影名字
					dd #{movie.title}
					dt 导演
					dd #{movie.director}
					dt 国家
					dd #{movie.country}
					dt 语言
					dd #{movie.language}
					dt 上映时间
					dd #{movie.showAt}
					dt 简介
					dd #{movie.summary}
